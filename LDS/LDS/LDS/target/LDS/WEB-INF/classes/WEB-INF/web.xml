	<servlet-mapping>
		<servlet-name>Error</servlet-name>
		<url-pattern>/e</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/e</location>
	</error-page>

	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/e</location>
	</error-page>

</web-app>